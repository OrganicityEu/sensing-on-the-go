<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent">

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/organicity_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/font_size"
            android:layout_marginEnd="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:layout_marginTop="@dimen/font_size"
            android:gravity="center"
            android:text="for the smart cities of the future"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"
        android:alpha="0"
        android:paddingTop="20dp">


        <Button
            android:id="@+id/btn_login"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:text="LOGIN" />

        <TextView
            android:id="@+id/link_anonymous"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Or proceed as Guest"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>